#include <msp430.h> 
#include "smallBird.h"
#include "lcdutils.h"
#include "lcddraw.h"

void wdt_c_handler() {
  static int cycleCount = 0;
  
  cycleCount++;
  if (cycleCount >= 50) { // Adjust frequency as needed
    moveSmallBird();
    cycleCount = 0;
  }
}

void __interrupt_vec(WDT_VECTOR) WDT() {
  wdt_c_handler();
}
